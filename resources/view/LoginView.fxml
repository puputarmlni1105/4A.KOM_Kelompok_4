<?xml version="1.0" encoding="UTF-8"?>

<!-- Import komponen-komponen JavaFX yang digunakan dalam file FXML ini -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.*?>

<!-- Root container: StackPane yang menjadi elemen utama dari tampilan -->
<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="view.LoginController"
           style="-fx-background-color: linear-gradient(to bottom right, #D72638, #B5651D);">

    <!-- VBox utama yang berisi form login -->
    <VBox fx:id="formContainer"
          spacing="20" alignment="CENTER"
          maxWidth="300" maxHeight="400"
          style="-fx-background-color: #F8F8F0;
                 -fx-background-radius: 15;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10,0,0,4);">

        <!-- Padding isi VBox -->
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <!-- Logo aplikasi di bagian atas -->
        <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
            <!-- Gambar logo diambil dari folder resources/images -->
            <Image url="@/images/Logo.jpg"/>
        </ImageView>

        <!-- Label judul aplikasi -->
        <Label text="RAMEN HOUSE"
               style="-fx-font-size: 18px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #999999;"/>

        <!-- Form input nama -->
        <VBox spacing="5">
            <!-- Label untuk nama -->
            <Label text="Nama" style="-fx-font-weight: bold;"/>
            <!-- TextField untuk mengisi nama -->
            <TextField fx:id="txtNama" promptText="Masukkan Nama Anda" />
        </VBox>

        <!-- Form input nomor HP -->
        <VBox spacing="5">
            <!-- Label untuk nomor HP -->
            <Label text="Nomor HP" style="-fx-font-weight: bold;"/>
            <!-- TextField untuk mengisi nomor HP -->
            <TextField fx:id="txtNoHP" promptText="Masukkan Nomor HP" />
        </VBox>

        <!-- Tombol untuk melakukan login -->
        <Button fx:id="btnMasuk"
                text="Masuk"
                maxWidth="Infinity"
                style="-fx-background-color: #8B0000;
                       -fx-text-fill: white;
                       -fx-background-radius: 8;"/>

    </VBox>
</StackPane>