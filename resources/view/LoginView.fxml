<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="view.LoginController"
           style="-fx-background-color: linear-gradient(to bottom right, #c74844, #ffffff);"
           prefWidth="400" prefHeight="600">

    <!-- Form Container -->
    <VBox spacing="20" alignment="CENTER"
          style="-fx-background-color: #ffffff; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10,0,0,4);"
          maxWidth="300" maxHeight="400">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Logo Placeholder -->
        <!-- Ganti src nanti dengan file lokal atau URL -->
        <!-- <ImageView fx:id="logoImage" fitHeight="80" fitWidth="80" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../assets/logo.png"/>
            </image>
        </ImageView> -->
        <Label text="LOGO DI SINI"
               style="-fx-font-size: 18; -fx-text-fill: #999999;"/>

        <!-- Input Nama -->
        <VBox spacing="5">
            <Label text="Nama" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtNama" promptText="Masukkan Nama Anda"/>
        </VBox>

        <!-- Input Nomor HP -->
        <VBox spacing="5">
            <Label text="Nomor HP" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtNoHP" promptText="Masukkan Nomor HP"/>
        </VBox>

        <!-- Tombol Masuk -->
        <Button fx:id="btnMasuk"
                text="Masuk"
                maxWidth="Infinity"
                style="-fx-background-color: #c74844; -fx-text-fill: white; -fx-background-radius: 8;"/>

    </VBox>
</StackPane>
