<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.Image?>

<VBox spacing="15" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.ManagerDashboardController"
      alignment="TOP_CENTER"
      style="-fx-background-color: #FFFFFF;"
      prefWidth="400" prefHeight="600">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header dengan panah dan teks "Manager Dashboard" -->
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #D72638; -fx-padding: 10 20;">
        <Label fx:id="logoLabel"
               text="←"
               style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 5 10; -fx-background-color: #8B0000; -fx-background-radius: 5;"
               onMouseClicked="#handleLogoClick"/>
        <Label text="Manager Dashboard"
               style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

        <!-- Tombol-tombol Tengah -->
    <VBox spacing="15" alignment="CENTER" prefWidth="600" prefHeight="80"
          xmlns:fx="http://javafx.com/fxml"
          VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <VBox spacing="15" alignment="CENTER"
              maxWidth="Infinity" prefHeight="80" VBox.vgrow="ALWAYS"
              style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 16px;">

            <HBox spacing="10" alignment="CENTER">
                <ImageView fitHeight="40" fitWidth="40">
                    <image>
                        <Image url="@/images/icon/pendapatan.png"/>
                    </image>
                </ImageView>
                <Label text="Rekap Pendapatan" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </HBox>

            <Label fx:id="labelHarian" text="Harian: Rp 0"
                   style="-fx-font-size: 14px; -fx-text-fill: white;"/>
            <Label fx:id="labelMingguan" text="Mingguan: Rp 0"
                   style="-fx-font-size: 14px; -fx-text-fill: white;"/>
            <Label fx:id="labelBulanan" text="Bulanan: Rp 0"
                   style="-fx-font-size: 14px; -fx-text-fill: white;"/>
            <Label fx:id="labelTahunan" text="Tahunan: Rp 0"
                   style="-fx-font-size: 14px; -fx-text-fill: white;"/>
        </VBox>

        <Button fx:id="btnMenuStok" text=" Menu dan Stok"
                maxWidth="Infinity" prefHeight="80" VBox.vgrow="ALWAYS"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px;">
            <graphic>
                <ImageView fitHeight="40" fitWidth="40">
                    <image>
                        <Image url="@/images/icon/menu.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnManajemenStaf" text=" Manajemen Akun Staf"
                maxWidth="Infinity" prefHeight="80" VBox.vgrow="ALWAYS"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 16px;">
            <graphic>
                <ImageView fitHeight="40" fitWidth="40">
                    <image>
                        <Image url="@/images/icon/manajemen staf.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnLaporan" text="Laporan Transaksi"
                maxWidth="Infinity" prefHeight="80" VBox.vgrow="ALWAYS"
                style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-font-size: 16px;">
            <graphic>
                <ImageView fitHeight="40" fitWidth="40">
                    <image>
                        <Image url="@/images/icon/laporan.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </VBox>

    <!-- Spacer Bawah -->
        <Region VBox.vgrow="ALWAYS"/>
    </VBox>
